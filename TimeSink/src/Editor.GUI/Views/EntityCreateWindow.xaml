<Window x:Class="TimeSink.Editor.GUI.Views.EntityCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:TimeSink.Editor.GUI.Views"
        Title="EntityCreateWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <my:EntityEdit Grid.Row="0" x:Name="entityEdit" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Content="Ok" Margin="5" Click="Ok_Click"/>
            <Button Content="Cancel" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
